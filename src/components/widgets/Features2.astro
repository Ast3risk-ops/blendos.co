---
import { Icon } from 'astro-icon';

const items = [
	{
		title: 'Fedora Rawhide',
		description:
			`Install any app from the Fedora repositories, or experience the latest version of GNOME available in the repos.`,
		icon: 'mdi:fedora',
		link: 'https://getfedora.org'
	},
	{
		title: 'Arch Linux',
		description:
			'Use any of the apps available in one of the largest package repositories, the AUR, or from the Arch repositories.',
		icon: 'mdi:arch',
		link: 'https://archlinux.org'
	},
	{
		title: 'Ubuntu 22.04 and 22.10',
		description:
			'Want to use one of those apps exclusive to Ubuntu? No problem, blendOS has you covered.',
		icon: 'mdi:ubuntu',
		link: 'https://ubuntu.com/desktop'
	},
];
---

<section class="relative" id="distros">
	<br><br>
	<div class="absolute inset-0 bg-primary-50 dark:bg-slate-800 pointer-events-none mb-32" aria-hidden="true"></div>
	<div class="relative max-w-6xl mx-auto px-4 sm:px-6">
		<div class="py-4 pt-8 sm:py-6 lg:py-8 lg:pt-12">
			<div class="mb-8 text-center">
				<p class="text-base text-primary-600 dark:text-primary-200 font-semibold tracking-wide uppercase">Distributions supported in blendOS</p>
				<h2 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
					Supported distributions
				</h2>
				<p class="max-w-3xl mx-auto text-center text-xl text-gray-600 dark:text-slate-400">
					Use apps or desktop environments from any of these distributions.
				</p>
			</div>
			<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3 items-start my-12 dark:text-white">
				{
					items.map(({ title, description, icon, link }) => (
						<div class="relative flex flex-col p-6 bg-white dark:bg-slate-900 rounded-xl shadow-2xl hover:shadow-lg hover:cursor-pointer transition dark:border dark:border-slate-800 dark:shadow-slate-800" onclick=`window.open('${link}')`>
							<div class="flex items-center mb-4">
								<Icon name={icon} class="w-12 h-12" />

								<div class="ml-4 text-xl font-bold">{title}</div>
							</div>
							<p class="text-gray-500 dark:text-gray-400 text-md">{description}</p>
						</div>
					))
				}
			</div>
		</div>
	</div>
</section>
